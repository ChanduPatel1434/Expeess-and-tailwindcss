<%- include('../partials/head') %>  
  </head>
  <body class=" text-black ">
    <%- include("../partials/nav") %>
  
    <section class="items-center flex flex-col justify-center">

      <div>
        <h1 class="font-bold text-lg p-10" >Well come to Airbnb</h1>
      </div>

    </section>

    <section class=" text-center m-4 ">
      <h3 class="text-xl font-bold py-4">List of Added Homes</h3>
      <div class="flex flex-wrap justify-center gap-6">
        <% registerHomes.forEach(home => { %>
          <div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition duration-300 w-full max-w-sm">
            <img src="<%= home.image || '/images/default-home.jpg' %>" alt="<%= home.houseName %>" class="w-full h-48 object-cover">
              <h3 class="text-xl font-semibold text-gray-800 mb-2"><%= home.name %></h3>
              <p class="text-gray-600 mb-2"><i class="fas fa-map-marker-alt mr-2"></i><%= home.location %></p>
              <div class="flex justify-between items-center mb-2">
                
                <span class="text-lg font-bold text-red-500">Rs<%= home.price %> / night</span>
                <div class="flex items-center">
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-5 h-5 text-yellow-400 mr-1">
                    <path fill-rule="evenodd" d="M10.788 3.21c.448-1.077 1.976-1.077 2.424 0l2.082 5.007 5.404.433c1.164.093 1.636 1.545.749 2.305l-4.117 3.527 1.257 5.273c.271 1.136-.964 2.033-1.96 1.425L12 18.354 7.373 21.18c-.996.608-2.231-.29-1.96-1.425l1.257-5.273-4.117-3.527c-.887-.76-.415-2.212.749-2.305l5.404-.433 2.082-5.006z" clip-rule="evenodd" />
                  </svg>
                  
                </div>
              </div>
              <button class=" p-3 pb-2 bg-blue-500 text-white  rounded-lg hover:bg-blue-600 transition duration-200">Book</button>
            </div>
          </div>
        <% }) %>
      </div>
    </section>
    
    
  

  <%- include('../partials/togglebtn') %>
  </body>
</html>
