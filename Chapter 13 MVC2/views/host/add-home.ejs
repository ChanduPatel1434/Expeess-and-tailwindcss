<%- include('../partials/head') %>

</head>
<body>
  <%- include('../partials/nav') %>
  <div class="min-h-screen bg-gray-100 flex items-center pt-6 justify-center">
    <div class="bg-white p-8 rounded-lg shadow-md w-96">
      <h2 class="text-2xl font-bold mb-6 text-center">Add New Home</h2>
      <form class="space-y-4" action="/home-succeses" method="POST">
        <div>
          <label class="block text-gray-700 mb-2">House Name</label>
          <input type="text" class="w-full px-3 p-4 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="Enter location" name="name">
        </div>
        <div>
          <label class="block text-gray-700 mb-2">Location</label>
          <input type="text" class="w-full px-3 p-4 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="Enter location" name="location">
        </div>
        <div>
          <label class="block text-gray-700 mb-2">Bed Rooms</label>
          <input type="text" class="w-full px-3 p-4 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="Enter bedrooms" name="bedrooms" id="bedrooms">
        </div>

      
        <div>
          <label class="block text-gray-700 mb-2">Price</label>
          <input type="text" class="w-full px-3 p-4 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="Enter price" name="price">
        </div>
        <div>
          <label class="block text-gray-700 mb-2">Image Link</label>
          <input type="url" class="w-full px-3 p-4 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="Enter image URL" name="image">
        </div>
        <button type="submit" class="w-full p-8 bg-blue-500 text-white  rounded-lg hover:bg-blue-600 transition duration-200">Add Home</button>
      </form>
    </div>
  </div>
</body>
</html>