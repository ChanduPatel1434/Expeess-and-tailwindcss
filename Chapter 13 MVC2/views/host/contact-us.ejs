<%- include('../partials/head') %>
  </head>
  <body>
    <%- include('../partials/nav') %>
    <section
      class="container mx-auto flex flex-col items-center justify-center min-h-screen p-6 bg-gray-50"
    >
      <div class=" max-w-2xl bg-white rounded-lg shadow-lg p-8">
      <h1 class="text-4xl font-bold text-center text-gray-800 mb-4">Contact Us</h1>
      <p class="text-center text-gray-600 mb-8">We'd love to hear from you! Please fill out the form below.</p>

      <form
        class="space-y-6"
        action="/contact-success"
        method="POST"
      >
        <div>
        <label
          class="block text-gray-700 text-sm font-medium mb-2"
          for="name"
        >
          Full Name
        </label>
        <input
          class="w-full border border-gray-300 rounded-lg px-4 py-2 text-gray-700 focus:ring-2 focus:ring-sky-500 focus:outline-none"
          type="text"
          id="name"
          placeholder="John Doe"
          name="name"
        />
        </div>
        <div>
        <label
          class="block text-gray-700 text-sm font-medium mb-2"
          for="email"
        >
          Email
        </label>
        <input
          class="w-full border border-gray-300 rounded-lg px-4 py-2 text-gray-700 focus:ring-2 focus:ring-sky-500 focus:outline-none"
          type="email"
          id="email"
          placeholder="johndoe@example.com"
          name="email"
        />
        </div>
        <div>
        <label
          class="block text-gray-700 text-sm font-medium mb-2"
          for="phone"
        >
          Phone
        </label>
        <input
          class="w-full border border-gray-300 rounded-lg px-4 py-2 text-gray-700 focus:ring-2 focus:ring-sky-500 focus:outline-none"
          type="text"
          id="phone"
          placeholder="(123) 456-7890"
          name="phone"
        />
        </div>
        <div>
        <label
          class="block text-gray-700 text-sm font-medium mb-2"
          for="message"
        >
          Message
        </label>
        <textarea
          class="w-full border border-gray-300 rounded-lg px-4 py-2 text-gray-700 focus:ring-2 focus:ring-sky-500 focus:outline-none h-32"
          id="message"
          placeholder="Your message here..."
          name="message"
        ></textarea>
        </div>
        <button
          class="w-full bg-sky-800  text-white p-8 font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline transition delay-150 duration-300 ease-in-out hover:-translate-y-1 hover:scale-110 hover:bg-indigo-500 cursor-pointer"
          type="submit"
        >
          submit
        </button>
      </form>
      </div>
    </section>
  </body>
</html>
