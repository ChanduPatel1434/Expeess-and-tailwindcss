<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Airbnb || Contact-us</title>
    <link rel="stylesheet" href="./output.css" />
    <link
    rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css"
    crossorigin="anonymous"
  />
  </head>
  <body>
    <header class="items-center bg-white p-4">
      <nav class="flex items-center justify-between px-8 h-16 gap-8">
        <a
          href="/"
          class="flex text-3xl font-bold border-2 px-2 py-1 text-sky-400 whitespace-nowrap"
        >
          Airbnb
        </a>

        <!-- Dropdown Menu -->
        <div
          class="dropdown-menu absolute top-16 left-0 w-full flex-col gap-8 items-center py-4 font-bold text-black hidden lg:flex lg:static lg:flex-row lg:justify-between lg:gap-8"
        >
          <ul class="flex flex-col items-center gap-6 lg:flex-row lg:gap-8">
            <li class="hover:text-red-600"><a href="/">Home</a></li>
            <li class="hover:text-red-600"><a href="/add-home">Add Home</a></li>
            <li class="hover:text-red-600"><a href="/contact">Contact</a></li>
            <li class="hover:text-red-600"><a href="/test">Test</a></li>
          </ul>
          <div class="flex flex-col items-center gap-6 lg:flex-row lg:gap-8">
            <button class="bg-sky-900 text-white px-4 py-2 rounded-lg">
              Sign Up
            </button>
            <button class="bg-sky-900 text-white px-4 py-2 rounded-lg">
              Log In
            </button>
          </div>
        </div>

        <!-- Toggle Button -->
        <div class="toggle-button lg:hidden cursor-pointer">
          <i class="fa-solid fa-bars fa-lg"></i>
        </div>
      </nav>
    </header>
    <section
      class="container flex flex-col items-center justify-center h-screen p-9 bg-gray-100"
    >


      <div class="flex flex-col items-center justify-center gap-4">
        <!-- Success Message -->
        <div class="bg-green-100 border border-green-400 text-green-700 px-8 py-4 rounded-lg shadow-lg animate-bounce">
          <p class="text-2xl font-bold">Message Sent Successfully! ðŸŽ‰</p>
        </div>

        <!-- Firework Animation -->
        <div class="relative">
          <div class="absolute -top-8 left-1/2 w-4 h-4 bg-yellow-500 rounded-full animate-ping"></div>
          <div class="absolute -top-8 left-1/4 w-4 h-4 bg-red-500 rounded-full animate-ping delay-100"></div>
          <div class="absolute -top-8 right-1/4 w-4 h-4 bg-blue-500 rounded-full animate-ping delay-200"></div>
        </div>

        <!-- Return Home Button -->
        <a href="/" class="mt-8 bg-sky-900 text-white px-6 py-3 rounded-lg hover:bg-sky-800 transition-colors">
          Return to Home
        </a>
      </div>

      <script>
        // Alert Message
        window.onload = function() {
          alert("Thank you for contacting us! We'll get back to you soon.");
        }
      </script>

    

     
    
    </section>
  </body>
</html>
