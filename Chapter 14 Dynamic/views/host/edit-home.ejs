<%-include("../partials/head") %> 
</head>
<body>
  <%-include("../partials/nav") %> 
  <div class="min-h-screen bg-gray-100 flex items-center pt-6 justify-center">
    <div class="bg-white p-8 rounded-lg shadow-md w-96">
      <%= editing ? 'Edit Home Details' : 'Add New Home' %>
      <form class="space-y-4" action="/host/<%= editing ? 'edit-home' : 'home-succeses' %> " method="POST">
        <div>
          <input type="hidden" name="id" value="<%=home ? home.id  : ''%> "  />
          <label class="block text-gray-700 mb-2">House Name</label>
          <input type="text" class="w-full px-3 p-4 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="Enter location" name="name"  value="<%= editing ? home.homename : '' %>">
        </div>
        <div>
          <label class="block text-gray-700 mb-2">Location</label>
          <input type="text" class="w-full px-3 p-4 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="Enter location" name="location" value="<%= editing ? home.location : '' %>">
        </div>
        <div>
          <label class="block text-gray-700 mb-2">Bed Rooms</label>
          <input type="text" class="w-full px-3 p-4 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="Enter bedrooms" name="bedrooms" id="bedrooms" value="<%= editing ? home.bedrooms : '' %>">
        </div>

      
        <div>
          <label class="block text-gray-700 mb-2">Price</label>
          <input type="text" class="w-full px-3 p-4 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="Enter price" name="price" value="<%= editing ? home.price : '' %>">
        </div>
        <div>
          <label class="block text-gray-700 mb-2">Rating</label>
          <input type="text" class="w-full px-3 p-4 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="Enter Rating" name="rating" value="<%= editing ? home.rating : '' %>">
        </div>
        <div>
          <label class="block text-gray-700 mb-2">Image Link</label>
          <input type="text/url" class="w-full px-3 p-4 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="Enter image URL" name="image" value="<%= editing ? home.image : '' %>">
        </div>
        <button type="submit" class="w-full p-8 bg-blue-500 text-white  rounded-lg hover:bg-blue-600 transition duration-200"><%= editing? "Update" : "Submit"   %></button>
      </form>
    </div>
  </div>
  <%-include("../partials/toggle") %> 
</body>
</html>